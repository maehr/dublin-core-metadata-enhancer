ENV_VAR="Value"

# OpenAI API Configuration
# Required for metadata enhancement pipeline
OPENAI_API_KEY="your-openai-api-key-here"

# Iconclass Subject Classification Configuration
# Optional settings for generating Dublin Core subject values
ICONCLASS_ENABLE="true"        # Enable/disable Iconclass classification
ICONCLASS_TOP_K="5"           # Maximum subjects per object (1-10)
ICONCLASS_LANG="de"           # Preferred language for labels (de/en)
ICONCLASS_VALIDATE="true"     # Validate notations via API (slower but more accurate)
# ICONCLASS_SEARCH_URL=""     # Optional: Iconclass Search API URL
