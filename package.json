{
	"name": "dublin-core-metadata-enhancer",
	"description": "Enhance Dublin Core records with reproducible enrichment workflows.",
	"author": "Stadt.Geschichte.Basel <info@stadtgeschichtebasel.ch>",
	"url": "https://github.com/Stadt-Geschichte-Basel/dublin-core-metadata-enhancer/issues",
	"license": "AGPL-3.0",
	"scripts": {
		"check": "prettier --ignore-path .gitignore  --check . '!{CODE_OF_CONDUCT.md,LICENSE-AGPL.md,LICENSE-CCBY.md,_layouts/default.html,package-lock.json,pnpm-lock.yaml,yarn.lock}'",
		"commit": "cz",
		"format": "prettier --ignore-path .gitignore --write . '!{CODE_OF_CONDUCT.md,LICENSE-AGPL.md,LICENSE-CCBY.md,_layouts/default.html,package-lock.json,pnpm-lock.yaml,yarn.lock}'",
		"prepare": "husky",
		"changelog": "pnpm exec git-cliff -- --config cliff.toml",
		"enhance": "python enhance_metadata.py",
		"test": "python test/test_metadata_enhancer.py",
		"python:install": "uv sync",
		"python:test": "uv run pytest",
		"python:format": "uvx ruff format . && uvx ruff check --fix .",
		"python:lint": "uvx ruff check . && uvx ty check src/",
		"python:type-check": "uvx ty check src/"
	},
	"devDependencies": {
		"@mermaid-js/mermaid-cli": "^11.9.0",
		"commitizen": "^4.3.1",
		"cz": "^1.8.2",
		"cz-conventional-changelog": "^3.3.0",
		"git-cliff": "^2.10.0",
		"husky": "^9.1.7",
		"prettier": "^3.6.2"
	},
	"type": "module",
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
